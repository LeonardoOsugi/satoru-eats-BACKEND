generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model cart {
  id         Int      @id @default(autoincrement())
  product_id Int
  servations String   @db.VarChar(255)
  created_at DateTime @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  products   products @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model cart2 {
  id          Int           @id @default(autoincrement())
  product_id  Int
  servations  String        @db.VarChar(255)
  created_at  DateTime      @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  products    products      @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  order       order[]
  order2      order2[]
  order_ready order_ready[]
}

model order {
  id          Int         @id @default(autoincrement())
  cart_id2    Int
  total_price String
  form        PaymentForm @default(DINHEIRO)
  name        String      @db.VarChar(255)
  code        String      @db.VarChar(10)
  created_at  DateTime    @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  cart2       cart2       @relation(fields: [cart_id2], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model order2 {
  id          Int         @id @default(autoincrement())
  cart_id2    Int
  total_price String
  form        PaymentForm @default(DINHEIRO)
  name        String      @db.VarChar(255)
  code        String      @db.VarChar(10)
  created_at  DateTime    @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  cart2       cart2       @relation(fields: [cart_id2], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model order_ready {
  id          Int         @id @default(autoincrement())
  cart2_id    Int
  total_price String
  form        PaymentForm @default(DINHEIRO)
  name        String      @db.VarChar(255)
  code        String      @db.VarChar(10)
  created_at  DateTime    @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  cart2       cart2       @relation(fields: [cart2_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model products {
  id                  Int           @id @default(autoincrement())
  image               String
  product_name        String        @db.VarChar(255)
  product_description String        @db.VarChar(255)
  price               String
  category            OrderCategory
  created_at          DateTime      @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  cart                cart[]
  cart2               cart2[]
}

enum OrderCategory {
  COMBOS
  ACOMPANHAMENTOS
  BEBIDAS
  SOBREMESAS
}

enum PaymentForm {
  DEBITO
  CREDITO
  DINHEIRO
}
