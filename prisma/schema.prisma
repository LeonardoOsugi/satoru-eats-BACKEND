generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model order {
  id         Int         @id @default(autoincrement())
  form       PaymentForm @default(DINHEIRO)
  created_at DateTime    @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  order_products         order_products[]
}

model order_products {
  id                                           Int      @id @default(autoincrement())
  product_id                                   Int
  order_id                                     Int
  sevations                                    String
  status                                       Status   @default(FAZENDO)
  name                                         String   @db.VarChar(255)
  code                                         String   @db.VarChar(10)
  created_at                                   DateTime @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  order                                        order @relation( fields: [order_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products                                      products @relation( fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model products {
  id                                                 Int              @id @default(autoincrement())
  image                                              String
  code_product                                       String
  product_name                                       String           @db.VarChar(255)
  product_description                                String           @db.VarChar(255)
  price                                              String
  category                                           OrderCategory
  created_at                                         DateTime         @default(dbgenerated("timezone('America/Sao_Paulo'::text, (CURRENT_DATE)::timestamp with time zone)")) @db.Timestamp(6)
  order_products                                     order_products[] 
}

enum OrderCategory {
  COMBOS
  ACOMPANHAMENTOS
  BEBIDAS
  SOBREMESAS
}

enum PaymentForm {
  DEBITO
  CREDITO
  DINHEIRO
}

enum Status {
  FAZENDO
  PRONTO
}
